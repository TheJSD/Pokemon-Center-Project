{% extends 'base.jinja' %}
{% block content %} {#WHAT I NEED - species, nickname, dob, contact, nurse, notes#}
  <h1>Register a new Pokémon:</h1>
  
  <form action="" method="POST">

  <label for="Pokémon Species">Pokémon Species:</label>
  <input type="text" id="species" required>

  <label for="Nickname">Nickname:</label>
  <input type="text" id="nickname">

  <label for="Date of Birth (DD/MM/YYYY)">Date of Birth (DD/MM/YYYY):</label>
  <input type="text" id="date of birth">

  <label for="Assigned Nurse">Assigned Nurse:</label>
  <select name="nurse", id="nurse">
    {% for nurse in nurses %}
      <option value="nurse.id">{{nurse.name}}</option>
    {% endfor %}
  </select>

  <label for="Treatment Notes">Treatment Notes:</label>



  </form>
{% endblock content %}
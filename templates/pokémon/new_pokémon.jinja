{% extends 'base.jinja' %}
{% block content %} {#WHAT I NEED - species, nickname, dob, contact, nurse, notes#}
  <h1>Register a new Pokémon:</h1>
  
  <form action="/pokémon" method="POST">

    <label for="species">Pokémon Species:</label>
    <input type="text" id="species" name="species" required>

    <label for="nickname">Nickname:</label>
    <input type="text" id="nickname" name="nickname">

    <label for="contact">Contact:</label>
    <input type="text", id="contact" name="contact" required>

    <label for="date_of_birth">Date of Birth (DD/MM/YYYY):</label>
    <input type="text" id="date_of_birth" name="date_of_birth">

    <label for="nurse">Assigned Nurse:</label>
    <select name="nurse", id="nurse">
      {% for nurse in nurses %}
        <option value={{nurse.id}}>{{nurse.name}}</option>
      {% endfor %}
    </select>

    <label for="treatment_notes">Treatment Notes:</label>
    <input type="text" id="treatment_notes" name="treatment_notes">

    <button type="submit">Register Pokémon</button>
  </form>
{% endblock content %}
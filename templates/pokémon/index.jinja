{% extends 'base.jinja' %}
{% block content %}
  <div class="container">
    <div class="title_and_button">
      <h1 class="title">Pokémon:</h1>
      <a href="pokémon/new_pokémon"><button class="primary__button">Register Pokémon</button></a>
    </div>
  <ul>
    
  {% for single_pokémon in pokémon  %}
    <li class="list__item">
    {% if single_pokémon.nickname is not none %}
        <ul>
          <li><a href="/pokémon/{{single_pokémon.id}}">Name: {{single_pokémon.nickname}}</a></li>
          <li>Species: {{single_pokémon.species}}</li>
        
      
    {% else %}
        
        <ul>
          <li><a href="/pokémon/{{single_pokémon.id}}">Name: {{single_pokémon.species}}</a></li>
          
    {% endif %}
            <li>Trainer: {% for trainer in trainers %}
              {% if single_pokémon.trainer == trainer.id %}
                {{trainer.name}}
              {% endif %}
            {% endfor %}</li>
          </ul>
        </li>
  {% endfor %}
  </ul>
  </div>
{% endblock content %}
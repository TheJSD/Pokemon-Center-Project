{% extends 'base.jinja' %}
{% block content %}

<div class="container">
  <h1 class="title">{{nurse.name}}</h1>
  
    <div class="edit_del__buttons">
    <a href="{{nurse.id}}/edit"><button>Edit Details</button></a>
    <form action="{{nurse.id}}/delete" method="post">
    <button>Delete Nurse</button>
    </form>
    </div>
  <h2 class="title"> Assigned Pokémon:</h2>
    {% if assigned_pokémon == none %}
    <p>No pokémon have been assigned to {{nurse.name}}</p>
    {% endif %}
    <ul>
    {% for single_pokémon in assigned_pokémon %}
      <li>
      {% if single_pokémon.nickname is not none %}
        <a href="/pokémon/{{single_pokémon.id}}">{{single_pokémon.nickname}} ({{single_pokémon.species}})</a>
        {%else%}
        <a href="/pokémon/{{single_pokémon.id}}">{{single_pokémon.species}}</a>
      {% endif %}
      </li>
    {% endfor %}
    </ul>
</div>
{% endblock content %}